<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="509.0" prefWidth="737.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SearchCar">

    <fx:define>
        <ToggleGroup fx:id="searchCriteria" />
    </fx:define>
    <RadioButton fx:id="byRegistration" layoutX="116.0" layoutY="29.0" toggleGroup="$searchCriteria" selected="true"/>
    <RadioButton fx:id="byMakerAndModel" layoutX="275.0" layoutY="29.0" toggleGroup="$searchCriteria" />

   <Label layoutX="33.0" layoutY="25.0" text="Search by">
      <font>
         <Font size="16.0" />
      </font>
   </Label>
   <Label layoutX="144.0" layoutY="25.0" text="Registration No.">
      <font>
         <Font size="16.0" />
      </font>
   </Label>
   <Label layoutX="300.0" layoutY="25.0" text="Maker and Model">
      <font>
         <Font size="16.0" />
      </font>
   </Label>
   <TextField fx:id="searchArea" layoutX="33.0" layoutY="68.0" prefHeight="25.0" prefWidth="323.0" />
   <Button fx:id="searchButton" layoutX="374.0" layoutY="68.0" mnemonicParsing="false" onAction="#onSearchClicked" text="Search" />
   <Button alignment="CENTER" layoutX="33.0" layoutY="441.0" mnemonicParsing="false" onAction="#onViewAll" prefHeight="44.0" prefWidth="166.0" text="View All Cars" wrapText="true">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
   </Button>
   <TableView fx:id="carDataTable" layoutX="32.0" layoutY="125.0" prefHeight="308.0" prefWidth="675.0">
       <columns>
           <TableColumn fx:id="regNo" prefWidth="75.0" text="Reg. No." />
           <TableColumn fx:id="yearMade" prefWidth="75.0" text="Year Made" />
           <TableColumn fx:id="color1" prefWidth="75.0" text="Color1" />
           <TableColumn fx:id="color2" prefWidth="75.0" text="Color2" />
           <TableColumn fx:id="color3" prefWidth="75.0" text="Color3" />
           <TableColumn fx:id="maker" prefWidth="75.0" text="Maker" />
           <TableColumn fx:id="model" prefWidth="75.0" text="Model" />
           <TableColumn fx:id="price" prefWidth="75.0" text="Price" />
           <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantity" />
       </columns>
   </TableView>
   <Button layoutX="528.0" layoutY="28.0" mnemonicParsing="false" onAction="#refreshThisPage" prefHeight="65.0" prefWidth="166.0" text="Refresh">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Button>

</AnchorPane>
